@using RestaurantSystem.Data.Models.Orders
@model UserOrdersViewModel

<div class="col-md-6 order-md-2 mb-4 align-items-center">
    <h4 class="d-flex justify-content-between align-items-center mb-4-5">
        <span class="text-muted"><strong>Поръчка -  <span class="badge badge-primary badge-pill">#@Model.Id.Substring(0,4)</span></strong></span>
       
        @{
            var status = string.Empty;

            if (Model.Status == OrderStatus.InProgres) { status = "В прогрес"; }
            if (Model.Status == OrderStatus.Sent) { status = "Изпратена"; }
            if (Model.Status == OrderStatus.Canceled) { status = "Отказана"; }
            if (Model.Status == OrderStatus.Pending) { status = "Обработва се"; }

        }
        <span class="font-weight-bold">@status</span>
    </h4>
    <ul class="list-group mb-3">
        
        @foreach (var product in Model.OrderProducts)
        {
            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <h6 class="my-0">@product.ProductName  <small class="text-muted">x @product.Count</small></h6>

                </div>
                <span class="text-muted">@product.ProductPrice лв.</span>
            </li>

        }

        <li class="list-group-item d-flex justify-content-between">
            <span></span>
            <strong>Тотал: @Model.TotaalSum лв.</strong>
        </li>
    </ul>

</div>