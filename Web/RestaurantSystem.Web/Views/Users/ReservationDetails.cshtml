@model UserReservationViewModel

<div class="col-md-6 order-md-2 mb-4 align-items-center">
    <h4 class="d-flex justify-content-between align-items-center mb-4-5">
        <span class="text-muted">
            <strong>
                @{
                    var status = string.Empty;
                }
                Резервация -
                @if (Model.ReservationStatus == "Approved")
                {
                    status = "Потвардена";
                    <span class="badge badge-success badge-pill">@status</span>
                }

                @if (Model.ReservationStatus == "Canceled")
                {
                    status = "Отказана";
                    <span class="badge badge-danger badge-pill">@status</span>
                }

                @if (Model.ReservationStatus == "Pending")
                {
                    status = "Изчаква потварждение";
                    <span class="badge badge-warning badge-pill">@status</span>
                }
            </strong>
        </span>

    </h4>
    <ul class="list-group mb-3">
        <li class="list-group-item d-flex justify-content-between lh-condensed col-md-6">
            <div>
                <h6 class="my-0">
                    <span class="badge badge-primary badge-pill">
                        <i class="fas fa-user-check"></i>
                        </span>  @Model.FirstName
                </h6>

            </div>
        </li>

        <li class="list-group-item d-flex justify-content-between lh-condensed col-md-6">
            <div>
                <h6 class="my-0">
                    <span class="badge badge-primary badge-pill">
                        <i class="fas fa-calendar-check"></i>

                    </span>  @Model.Date.ToString("dd.MM.yy - HH:mm")
                </h6>

            </div>
        </li>

        <li class="list-group-item d-flex justify-content-between lh-condensed col-md-6">
            <div>
                <h6 class="my-0">
                    <span class="badge badge-primary badge-pill">
                        <i class="fas fa-users"></i>
                    </span>  @Model.PeopleCount
                </h6>

            </div>
        </li>

        <li class="list-group-item d-flex justify-content-between lh-condensed col-md-6">
            <div>
                <h6 class="my-0">
                    <span class="badge badge-primary badge-pill">
                        <i class="fas fa-phone-volume"></i>
                        </span>  +359 @Model.PhoneNumber
                </h6>

            </div>
        </li>

    </ul>
</div>