@model OnlinePaymentViewModel

<div class="col-md-6 order-md-2 mb-4 align-items-center">
    <h4 class="d-flex justify-content-between align-items-center mb-4-5">
        <span class="text-muted">
            <span class="text-primary font-weight-bold">
                
            </span>
            <strong>
                Поръчка -
                <span class="badge badge-primary badge-pill">
                    <a asp-controller="Users"
                       asp-action="OrderDetails"
                       asp-route-targetId="@Model.OrderId"
                       class="stretched-link"> #@Model.OrderId.Substring(0,4)</a>
                </span>
            </strong>
        </span>
        @{
            var status = string.Empty;
            status = Model.IsSuccessful is true ? status = "Успешно" : status = "Не успешно";

        }
        <span class="font-weight-bold">@status</span>
        <h6><strong></strong></h6>
    </h4>
    <ul class="list-group mb-3">
        <li class="list-group-item d-flex justify-content-between">
            <span></span>
            <strong>
                @Model.CreatedOn.ToString("dd.MM.yy HH:mm")
            </strong>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <span></span>
            <strong>
                <i class="far fa-credit-card"></i>  ***@Model.CardNumber
            </strong>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <span></span>
            <strong>Тотал: @Model.Amount лв.</strong>
        </li>

    </ul>

</div>