<div class=row>
    <div class="col-md-8">
        <ul class="list-group">
            @foreach (var product in Model.Menu)
            {
                <li class="list-group-item mb-3">
                    <div class="row">
                        <div class=col>
                            @product.Name - @product.Price лв.

                            <a class="btn btn-sm btn-primary float-right"
                           asp-action="Order"
                           asp-route-restaurantId="@Model.Id"
                           asp-route-productId="@product.Id">
                                <i class="fas fa-plus-circle"></i>
                            </a>
                        </div>

                    </div>
                    @product.Description
                </li>
            }
        </ul>
    </div>
    <div class="col-md-4">
        @foreach (var item in Model.Order.OrderProducts)
        {
            <div class="row">
                <div class="col-md-2">
                    <a class="btn btn-sm btn-primary float-left"
                   asp-action="ProductCount"
                   asp-route-restaurantId="@Model.Id"
                   asp-route-productId="@item.ProductId"
                   asp-route-orderId="@item.OrderId"
                   asp-route-count="+">
                        <i class="fas fa-plus-circle"></i>
                    </a>
                </div>
                <div class="col text-center">
                    <p>@item.ProductName - @item.Count</p>
                </div>
                <div class="col-md-2">
                    <a class="btn btn-sm btn-primary float-left"
                   asp-action="ProductCount"
                   asp-route-restaurantId="@Model.Id"
                   asp-route-productId="@item.ProductId"
                   asp-route-orderId="@item.OrderId"
                   asp-route-count="-">
                        <i class="fas fa-minus-circle"></i>
                    </a>
                </div>
            </div>
        }
        <hr />
        <div class="row justify-content-center">
            <a class="btn btn-sm btn-primary float-left"
               asp-action="SendOrder"
               asp-route-restaurantId="@Model.Id">
                Поръчай
            </a>
        </div>

        <h5>Тотал: @Model.Order.TotaalSum лв.</h5>

    </div>
</div>






