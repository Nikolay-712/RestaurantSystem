@using RestaurantSystem.Common
@{
    this.ViewData["Title"] = "Home Page";
    var message = this.TempData["message"] as string;
    var resarvation = this.TempData["reservation"] as string;

}

@if (message != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Изпратено</strong> @message.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (resarvation != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Изпратено</strong> @resarvation.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
