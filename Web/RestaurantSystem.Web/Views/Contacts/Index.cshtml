@model MessageInputVewModel
@using RestaurantSystem.Common
@inject UserManager<ApplicationUser> UserManager;

@{
    var messageType = Enum.GetValues(typeof(MessageType));
}

<div class="row">
    
<div class="col-md-6 ">
    <form asp-action="Index" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (this.User.IsInRole(GlobalConstants.OwnerRoleName))
        {

            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Имате права като собственик,Можете да изпратите вашият вапрос.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="form-group">
                <select asp-for="MessageType" class="form-control alert-heading">
                    <option value="Саобщение">Саобщение</option>
                </select>
                <span asp-validation-for="MessageType" class="text-danger"></span>
            </div>
        }
        else
        {
            <div class="form-group">
                <select asp-for="MessageType" class="form-control  alert-heading">
                    <option value="">Изберете вид саобщение</option>
                    @foreach (var type in messageType)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <span asp-validation-for="MessageType" class="text-danger"></span>
            </div>
        }

        <div class="form-group">
            <textarea rows="5" asp-for="Message" class="form-control" placeholder="Саобщение..."></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Изпрати" class="btn btn-primary" />
        </div>
    </form>
</div>

