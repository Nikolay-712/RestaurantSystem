@model OrderViewModel

<div class="row">
    <div class="col-md-6 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-4-5">
            <span class="text-muted"><strong>Поръчка</strong></span>
            <span class="badge badge-primary badge-pill">@Model.OrderProducts.Count()</span>
        </h4>
        <ul class="list-group mb-3">

            @foreach (var product in Model.OrderProducts)
            {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@product.ProductName  <small class="text-muted">x @product.Count</small></h6>

                    </div>
                    <span class="text-muted">@product.ProductPrice лв.</span>
                </li>

            }

            <li class="list-group-item d-flex justify-content-between">
                <span></span>
                <strong>@Model.TotaalSum лв.</strong>
            </li>
        </ul>

    </div>
    <div class="col-md-6 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-4-5">
            <span class="text-muted"><strong>Детайли</strong></span>
        </h4>
        <ul class="list-group mb-3">

            @{
                var payment = Model.Payment.PaymentType.ToString() == "Cash" ? "При доставка" : "Дебитна карта";
            }

            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                   <h6 class="my-0 mb-2">  <span class="text-muted">адрес:</span> @Model.ShippingAddress </h6>
                   <h6 class="my-0 mb-2">  <span class="text-muted">телефон:  </span> +359 @Model.PhoneNumber </h6>
                   <h6 class="my-0 mb-2">  <span class="text-muted">Плащане:  </span>@payment </h6>
                </div>
                
            </li>

            <li class="list-group-item d-flex justify-content-between">
                <span></span>
                <strong>@Model.TotaalSum лв.</strong>
            </li>
        </ul>

    </div>
</div>