@model RegisterRestaurantInputModel

<div class="row">
    <div class="col-md-6 ">
        <form asp-action="Registration" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Име на вашият ресторант" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea rows="5" asp-for="Description" class="form-control" placeholder="Добавете описание"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="DeliveryPeice" class="form-control" placeholder="Цена за доставка" />
                <span asp-validation-for="DeliveryPeice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="OpenIn" class="form-control" placeholder="Отваря в (пример: 08:30, 9:00...)" />
                <span asp-validation-for="OpenIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CloseIn" class="form-control" placeholder="Затваря в (пример: 22:30, 23:00...)" />
                <span asp-validation-for="CloseIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добави ресторант" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
