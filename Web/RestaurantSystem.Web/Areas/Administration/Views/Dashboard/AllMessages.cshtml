@model AllMessagesViewModel

<div class="row">
    <div class="col-md-4 mb-4">
        <input class="form-control me-2" id="myInput" onkeyup="myFunction()" type="search" placeholder="Search by email">
    </div>

    <div class="col-md-4 mb-4">
        <input class="form-control me-2" id="myInput1" onkeyup="myFunction1()" type="search" placeholder="Search by type">
    </div>
</div>

<div class="card mb-5">
    <div class="card-header">
        <span style="font-size: 18px; color: Dodgerblue;">
            <i class="fas fa-envelope-open-text"></i>
        </span>
        (@Model.UnreadMessagesCount Саобщения)
    </div>
    <div class="card-block p-0">
        <table id="myTable" class="table table-bordered table-sm m-0 text-center">
            <thead>
                <tr>
                    <th scope="col">Изпратено от</th>
                    <th scope="col">Изпратено на</th>
                    <th scope="col">Тема</th>
                    <th scope="col">Отговорено</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>

                @foreach (var message in Model.Messages)
                {
                    <tr id="myUL">
                        <td>@message.Sender</td>
                        <td>@message.CreatedOn.ToString("dd.MM.yyyy - HH:mm")</td>
                        <td>@message.MessageType</td>
                        <td>
                            @if (message.IsRead)
                            {
                                <span style="font-size: 1em; color: Green;"> <i class="fas fa-circle"></i> </span>
                            }

                            else
                            {
                                <span style="font-size: 1em; color: Tomato;"> <i class="fas fa-circle"></i>  </span>
                            }

                        </td>

                        <td>
                            <a class="btn btn-primary btn-sm"
                           asp-action="ReadMessage"
                           asp-route-messageId="@message.Id">
                                <i class="far fa-comment-alt"> </i> Прочети
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


