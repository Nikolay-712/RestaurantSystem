@model AdminMessageViewModel

<div class="mb-3">
    <a class="btn btn-primary btn-sm"
       asp-action="allmessages">
        <i class="fas fa-arrow-alt-circle-left"></i> Всички
    </a>

    @if (Model.MessageType == "Кандидатсване")
    { 
        <a class="btn btn-primary btn-sm"
            asp-controller="Users"
            asp-action="Аpprove"
            asp-route-messageId="@Model.Id">
            <i class="fas fa-user-plus"></i> Одобри
        </a>
    }

</div>


<div class="row">
    <div class="col-md-6 ">
        <form asp-action="Index">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-control"><strong>@Model.MessageType</strong></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-control">
                            <strong>@Model.CreatedOn.ToString("dd.MM.yy - HH:mm")</strong>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="form-control"><strong>@Model.Sender</strong></label>
            </div>
            <div class="form-group">
                <textarea disabled rows="5" asp-for="Message" class="form-control"></textarea>
            </div>
        </form>
    </div>


    <div class="col-md-6 ">
        <form asp-action="ReadMessage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Title" class="form-control" placeholder="Саобщение...">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea rows="5" asp-for="Text" class="form-control" placeholder="Саобщение..."></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" placeholder="Саобщение...">
            </div>
            <div class="form-group">
                <input type="submit" value="Изпрати" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>